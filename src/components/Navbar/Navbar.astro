---
// Navbar.astro
// Barra de navegación responsive con Tailwind CSS
---

<nav class="bg-white dark:bg-gray-900 shadow-lg sticky top-0 z-50">
  <div class="max-w-8xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16 items-center">
      <!-- Logo -->
      <div class="flex-shrink-0">
        <a
          href="/"
          class="text-xl font-bold text-gray-800 dark:text-white hover:text-gray-600 transition-colors"
        >
          MiLogo
        </a>
      </div>

      <!-- Enlaces de navegación (visible en desktop) -->
      <div class="hidden md:flex space-x-6">
        <a
          href="#features"
          class="text-gray-600 dark:text-gray-300 hover:text-gray-800 dark:hover:text-white transition-colors"
        >
          Características
        </a>
        <a
          href="#pricing"
          class="text-gray-600 dark:text-gray-300 hover:text-gray-800 dark:hover:text-white transition-colors"
        >
          Precios
        </a>
        <a
          href="#about"
          class="text-gray-600 dark:text-gray-300 hover:text-gray-800 dark:hover:text-white transition-colors"
        >
          Nosotros
        </a>
        <a
          href="#contact"
          class="text-gray-600 dark:text-gray-300 hover:text-gray-800 dark:hover:text-white transition-colors"
        >
          Contacto
        </a>
      </div>

      <!-- Botón de menú móvil (visible en mobile) -->
      <div class="md:hidden flex items-center">
        <button
          id="menu-toggle"
          class="text-gray-600 dark:text-gray-300 hover:text-gray-800 dark:hover:text-white focus:outline-none focus:text-gray-800 dark:focus:text-white"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-6 w-6"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16m-7 6h7"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Menú desplegable móvil -->
  <div id="mobile-menu" class="hidden md:hidden">
    <div class="px-2 pt-2 pb-3 space-y-1">
      <a
        href="#features"
        class="block text-gray-600 dark:text-gray-300 hover:text-gray-800 dark:hover:text-white transition-colors"
      >
        Características
      </a>
      <a
        href="#pricing"
        class="block text-gray-600 dark:text-gray-300 hover:text-gray-800 dark:hover:text-white transition-colors"
      >
        Precios
      </a>
      <a
        href="#about"
        class="block text-gray-600 dark:text-gray-300 hover:text-gray-800 dark:hover:text-white transition-colors"
      >
        Nosotros
      </a>
      <a
        href="#contact"
        class="block text-gray-600 dark:text-gray-300 hover:text-gray-800 dark:hover:text-white transition-colors"
      >
        Contacto
      </a>
    </div>
  </div>
</nav>

<script>
  // Script para manejar el menú móvil
  const menuToggle = document.getElementById("menu-toggle");
  const mobileMenu = document.getElementById("mobile-menu");

  if (menuToggle && mobileMenu) {
    menuToggle.addEventListener("click", () => {
      mobileMenu.classList.toggle("hidden");
    });
  } else {
    console.error("Error: No se encontró el botón de menú o el menú móvil.");
  }
</script>
